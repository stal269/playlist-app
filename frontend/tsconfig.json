{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "es6",
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
